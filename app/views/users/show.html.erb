<div class="container">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link <%= 'active' if @destination == 'events' %>" id="pills-events-tab" data-toggle="pill" href="#pills-events" role="tab" aria-controls="pills-events" aria-selected="false">My events</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if @destination == 'profile' %>" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="true">My profile</a>
    </li>
  </ul>
  <div class="tab-content active" id="pills-tabContent">
    <div class="tab-pane fade <%= 'show active' if @destination == 'events' %>" id="pills-events" role="tabpanel" aria-labelledby="pills-events-tab">
      <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="pills-upcoming-tab" data-toggle="pill" href="#pills-upcoming" role="tab" aria-controls="pills-profile" aria-selected="true">Upcoming events</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-past-tab" data-toggle="pill" href="#pills-past" role="tab" aria-controls="pills-past" aria-selected="false">Past events</a>
        </li>
      </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade <%= 'show active' if @destination == 'events' %>" id="pills-upcoming" role="tabpanel" aria-labelledby="pills-upcoming-tab">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Location</th>
                <th scope="col">Price</th>
                <th scope="col">Date</th>
              </tr>
            </thead>
            <tbody>
              <% @events.each do |event| %>
              <tr>
                <th scope="row">1</th>
                <td><%= event.title %></td>
                <td><%= event.location %></td>
                <td><%= event.price %></td>
                <td><%= event.date %></td>
                <td><%= link_to 'Edit event', edit_event_path(event), class:"btn btn-primary" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="tab-pane fade" id="pills-past" role="tabpanel" aria-labelledby="pills-past-tab">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Location</th>
                <th scope="col">Price</th>
                <th scope="col">Date</th>
              </tr>
            </thead>
            <tbody>
              <% @events.each do |event| %>
              <tr>
                <th scope="row">1</th>
                <td><%= event.title %></td>
                <td><%= event.location %></td>
                <td><%= event.price %></td>
                <td><%= event.date %></td>
                <td><%= link_to 'Edit event', edit_event_path(event), class:"btn btn-primary" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="tab-pane fade <%= 'show active' if @destination == 'profile' %>" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <div class="form col-4 py-5">
        <h1>My profile</h1>
        <div class="form-fields">
        <%= simple_form_for current_user do |f| %>

          <% if current_user.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(current_user.errors.count, "error") %> prohibited
                this user from being saved:
              </h2>
              <ul>
                <% current_user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :description %>
          <%= f.submit "Save changes", class:"btn btn-primary" %>

        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
