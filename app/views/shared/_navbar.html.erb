<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://thumbs.dreamstime.com/b/simple-modern-icon-profile-man-wearing-medical-mask-simple-minimalist-modern-icon-profile-faceless-man-wearing-178743167.jpg" %>
    <strong>HappyCorona</strong>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Créer un événement", new_event_path, class: "mx-3 btn btn-primary" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.profile_pic.attached? %>
            <%= cl_image_tag current_user.profile_pic.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else  %>
            <%= image_tag "https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': true %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mes événements", "#{user_path(current_user, destination: "events")}", class: "dropdown-item" %>
            <%= link_to "Mon profil", "#{user_path(current_user, destination: "profile")}", class: "dropdown-item" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  <% else %>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Créer un compte", new_user_registration_path, class: "nav-link" %>
      </li>
    </ul>
  <% end %>
</div>
