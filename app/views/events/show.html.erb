<div class="event-head" style="background-image: url(https://images.unsplash.com/photo-1513151233558-d860c5398176?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80)"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-md-8">
      <div class="flat-show-card">
        <h1><%= @event.title %></h1>

        <div class="flex justify-content-between mt-3 mb-0" >
          <p class="flat-show-address"><%= @event.date.strftime("Le %m/%d/%Y à %Ih%M") %></p>
          <p class="flat-show-address mr-3"><%= @event.price %>€</p>
        </div>
      </div>

      <div class="flat-show-card">
        <h3>Description:</h3>
        <p><%= @event.description %></p>
      </div>

      <div class="flat-show-card">
        <h3>Lieu:</h3>
        <p class="flat-show-address"><%= @event.location %></p>
        <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>



    <div class="col-md-4 sticky-top">
      <div class="flat-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Partage cet événement</h6>

          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-twitter-square fa-2x mr-2"></i>
            <i class="fab fa-pinterest-square fa-2x mr-2"></i>
            <i class="fas fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>

      <div class="flat-show-card">
        <a href="#" class="btn btn-primary btn-lg w-100">Je participe</a>
      </div>

      <div class="flat-show-card">
        <h5> X inscrits, dont:</h5>
        <p><%= @event.user.first_name %>(host)</p>
        <p></p>
      </div>

    </div>
  </div>
</div>
