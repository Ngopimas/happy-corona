<%= simple_form_for @event do |f| %>
  <%= f.input :title, label: "Titre" %>
  <%= f.input :location, label: "Lieu" %>
  <%= f.input :date %>
  <%= f.input :category, label: "Catégorie", collection: [ "(A)live Music", "CoronArt", "Food", "E-Sports", "Quarantine body challenge", "Soirées CoronaMousse"] %>
  <%= f.input :price, label: "Prix"  %>
  <%= f.input :description %>
  <%= f.button :submit, "Soumettre l'évènement",  class: "btn btn-primary btn-lg" %>
<% end %>
