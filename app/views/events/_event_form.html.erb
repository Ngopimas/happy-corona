<%= simple_form_for @event do |f| %>
  <%= f.input :title, label: "Titre" %>
  <%= f.input :location, label: "Lieu" %>
  <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :category, label: "Catégorie", collection: [ "(A)live Music", "CoronArt", "Food", "E-Sports", "Quarantine body challenge", "Soirées CoronaMousse"] %>
  <%= f.input :price, label: "Prix"  %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <% if @event.photo.attached? %>
    <%= cl_image_tag @event.photo.key, class:"avatar-square" %>
  <% end %>
  <%= f.button :submit, "Soumettre l'évènement",  class: "btn btn-primary btn-lg mt-5" %>
<% end %>
