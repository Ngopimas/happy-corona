<div class="container">
  <h1> Parcourir les événements </h1>
  <p> </p>
</div>
<div class="container">
    <%= simple_form_for :search, url: events_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-primary">
        <i class="fas fa-search"></i> Rechercher
      </button>
    </div>
  <% end %>

</div>
<div class="container my-5">
  <div class="cards my-5">
    <% @events.each do |event| %>
    <div class="card-trip">
      <img src="" />
      <div class="card-trip-infos">
        <div>
          <h2> <%= link_to event.title, event_path(event) %> </h2>
          <p> <%= event.location %> </p>
        </div>
        <% if event.price == 0 %>
          <p class="card-trip-pricing"> Gratuit </p>
        <% else  %>
          <p class="card-trip-pricing"> <%= event.price %>€</p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
