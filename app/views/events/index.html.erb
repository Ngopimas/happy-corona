<div class="container">
  <h1> Parcourir les événements </h1>
  <p> </p>
</div>
<div class="container">
  <%= form_tag events_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Rechercher un événement"
    %>
    <%= submit_tag "Rechercher", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="container my-5">
  <div class="cards my-5">
    <% @events.each do |event| %>
    <div class="card-trip">
      <img src="" />
      <div class="card-trip-infos">
        <div>
          <h2> <%= link_to event.title, event_path(event) %> </h2>
          <p> <%= event.location %> </p>
        </div>
        <% if event.price == 0 %>
          <p class="card-trip-pricing"> Gratuit </p>
        <% else  %>
          <p class="card-trip-pricing"> <%= event.price %>€</p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
